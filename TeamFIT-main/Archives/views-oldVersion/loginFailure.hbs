<!-- Welcome Header -->
<h1 class="login-header">Welcome to MyBookList!</h1>

<form action="#">
    <!-- Username and Password fields -->
    <div class="centerPage">
        <div class="login-horizontal-line"></div>
            <p class="loginErrorMessage text-align-center">Invalid username or password.</p>
            <p>Username</p>
            <input class="loginFields" type="text" placeholder="Username" name="username">

        <p>Password</p>
        <input class="loginFields" type="password" placeholder="Password" name="password">
    </div>
    <!-- Log In button -->
    <div class="centerPage text-align-center">
        <button class="loginButton" type="submit">Log In</button>
    </div>  
</form>

<!-- Helper links for account creation or forgot password -->
<div class="login-buttons text-align-center">
    <div class="createAccbtn">
        <a href="/signup">Don't have an account?</a>
    </div>
    <div class="forgotPasswrdbtn">
        <a href="#">Forgot Password?</a>
    </div>
</div>
